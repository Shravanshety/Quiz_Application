<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        app:title="Quiz App"
        android:titleTextColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="select a topic"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="start your learning journey"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/splash_image1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:background="@drawable/card_view_design"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="java"
                        android:id="@+id/javaCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#B8B8B8"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/java" />

                            <TextView
                                android:id="@+id/javaText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="java"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="kotlin"
                        android:id="@+id/kotlinCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#B8B8B8"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/kotlinImage"
                                android:layout_marginTop="20dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/kotlin"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="kotlin"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="python"
                        android:id="@+id/pythonCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#B8B8B8"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/pythonImage"
                                android:layout_marginTop="20dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/python" />

                            <TextView
                                android:id="@+id/pythonText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="python"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="cpp"
                        android:id="@+id/cppCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#B8B8B8"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cppImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/cplus" />

                            <TextView
                                android:id="@+id/cppText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="c++"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="dart"
                        android:id="@+id/dartCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#949191"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/dartImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/dart" />

                            <TextView
                                android:id="@+id/dartText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Dart"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="sql"
                        android:id="@+id/sqlCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#878686"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/sqlImage"
                                android:layout_marginTop="20dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/sql" />

                            <TextView
                                android:id="@+id/sqlText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Sql"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="xml"
                        android:id="@+id/xmlCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#BAB9B9"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/xmlImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/xml" />

                            <TextView
                                android:id="@+id/xmlText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Xml"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="c"
                        android:id="@+id/cCard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#BAB9B9"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cImage"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/c" />

                            <TextView
                                android:id="@+id/cText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="C"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>